.comment-page{

}
.comment-page .footer{
  position: fixed;
  bottom:-10px;
  left: 0;
  width:100%;
  padding:10px 20px;
  border-top:1px solid #ddd;
}
.comment-page .small-panel{
  height: 40px;
}
.comment-page .big-panel{
  height: 100px;
}
.comment-page .footer input{
  width:calc(100% - 60px);
  height: 30px;
  border-radius: 10px;
  padding:0 10px;
  background: #ddd;
  font-size: 12px;
  
}
